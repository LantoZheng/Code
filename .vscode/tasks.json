{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: 编译当前文件",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "windows": {
                "command": "C:\\mingw64\\bin\\g++.exe",
                "args": [
                    "-fdiagnostics-color=always",
                    "-g",
                    "${file}",
                    "-o",
                    "${fileBasenameNoExtension}.exe"
                ]
            },
            "osx": {
                "command": "/usr/bin/clang++",
                "args": [
                    "-fdiagnostics-color=always",
                    "-g",
                    "${file}",
                    "-o",
                    "${fileBasenameNoExtension}"
                ]
            },
            "linux": {
                "command": "g++",
                "args": [
                    "-fdiagnostics-color=always",
                    "-g",
                    "${file}",
                    "-o",
                    "${fileBasenameNoExtension}"
                ]
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "跨平台的调试器构建任务。"
        }
    ],
    "version": "2.0.0"
}