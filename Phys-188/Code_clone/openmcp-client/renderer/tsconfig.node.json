{
	"extends": "@tsconfig/node22/tsconfig.json",
	"include": [
		"vite.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*",
		"eslint.config.*"
	],
	"compilerOptions": {
		"noEmit": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"module": "es2022",
		"lib": [
            "es2022",
			"dom"
        ],
		"moduleResolution": "Bundler",
		"types": [
			"node"
		]
	}
}