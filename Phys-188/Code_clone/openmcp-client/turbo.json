{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "serve": {
            "cache": false
        },
        "build": {
            "dependsOn": ["@openmcp/renderer#build", "@openmcp/service#build", "//#build:task-loop"],
            "cache": false
        },
        "//#build:task-loop": {
            "cache": false
        },
        "@openmcp/renderer#serve": {
            "cache": false,
            "persistent": true
        },
        "@openmcp/renderer#dev": {
            "cache": false,
            "persistent": true
        },
        "@openmcp/renderer#build": {
            "cache": false
        },
        "@openmcp/service#serve": {
            "persistent": true,
            "cache": false
        },
        "@openmcp/service#dev": {
            "persistent": true,
            "cache": false
        },
        "@openmcp/service#build": {
            "cache": false
        }
    }
}
