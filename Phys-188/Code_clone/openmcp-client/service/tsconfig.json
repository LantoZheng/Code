{
    "compilerOptions": {
        "baseUrl": ".",                    
        "target": "ES6",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": false,
        "experimentalDecorators": true,
    },
    "paths": {
        "@/*": [
            "src/*"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ] 
}